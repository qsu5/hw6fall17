%h1 The following movies containing "#{@keyWord}" were found in TMDb

= form_tag movies_add_tmdb_path do
  %table#movies
    %thead
      %tr
        %th{:class => @title_header}= link_to 'Movie Title', movies_search_tmdb_path(:sort => 'title', :ratings => @selected_ratings), :id => 'title_header'
        %th Rating
        %th{:class => @date_header}= link_to 'Release Date', movies_search_tmdb_path(:sort => 'release_date', :ratings => @selected_ratings), :id => 'release_date_header'
        %th Select
    %tbody
      -@newMovie.each do |movie|
        %tr
          %td= movie[:title] 
          %td= movie[:rating]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]", :id => "checkbox_#{movie[:tmdb_id]}"
                
  = submit_tag "Add Selected Movies", :id => "movies_button"

=link_to 'Return to movie list', movies_path